<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.TaskListController">
    <children>
        <TableView fx:id="taskTable" layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="572.0">
            <columns>
                <TableColumn fx:id="titleColumn" text="Title">
                    <cellValueFactory>
                        <PropertyValueFactory property="title" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="descriptionColumn" text="Description">
                    <cellValueFactory>
                        <PropertyValueFactory property="description" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="dueDateColumn" text="Due Date">
                    <cellValueFactory>
                        <PropertyValueFactory property="dueDate" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="priorityColumn" text="Priority">
                    <cellValueFactory>
                        <PropertyValueFactory property="priority" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="statusColumn" text="Status">
                    <cellValueFactory>
                        <PropertyValueFactory property="status" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <Button fx:id="addTaskButton" layoutX="14.0" layoutY="220.0" mnemonicParsing="false" text="Add Task" />
        <Button fx:id="editTaskButton" layoutX="104.0" layoutY="220.0" mnemonicParsing="false" text="Edit Task" />
        <Button fx:id="deleteTaskButton" layoutX="194.0" layoutY="220.0" mnemonicParsing="false" text="Delete Task" />
      <Button fx:id="add_form" layoutX="511.0" layoutY="220.0" mnemonicParsing="false" text="Add Form" />
    </children>
</AnchorPane>
