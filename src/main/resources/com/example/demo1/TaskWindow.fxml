<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo1.TaskListController">
    <children>
        <TableView fx:id="taskTable" layoutX="50.0" layoutY="50.0" prefHeight="300.0" prefWidth="500.0">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="200.0" text="Title" />
                <TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Description" />
                <TableColumn fx:id="dueDateColumn" prefWidth="100.0" text="Due Date" />
                <TableColumn fx:id="priorityColumn" prefWidth="100.0" text="Priority" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
            </columns>
        </TableView>
        <Button fx:id="addTaskButton" layoutX="50.0" layoutY="360.0" mnemonicParsing="false" text="Add Task" />
        <Button fx:id="editTaskButton" layoutX="150.0" layoutY="360.0" mnemonicParsing="false" text="Edit Task" />
        <Button fx:id="deleteTaskButton" layoutX="250.0" layoutY="360.0" mnemonicParsing="false" text="Delete Task" />
    </children>
</AnchorPane>
